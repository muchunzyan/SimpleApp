<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.teacherAccount.AccountTeacherFragment"
    android:background="@color/colorBackGround">

    <LinearLayout
        android:id="@+id/user_info_lay"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_account"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:foreground="@drawable/user_icon_account_back"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#515C6F"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/text_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:textColor="#515C6F"
                android:textSize="14sp"
                android:layout_marginBottom="9dp"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_account_help"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@drawable/question" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_activity_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_info_lay"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/btn_activity_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="start">

            <TextView
                android:text="Студент"
                android:textSize="15sp"
                android:gravity="end|center"
                android:textColor="#727C8E"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/colorWhite"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_activity_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="end">

            <TextView
                android:text="Учитель"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FF6969"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="40dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#FF6969"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_activity_lay"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/corners_without_frame"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/my_subjects_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мои объявления"
                android:background="@color/colorWhite"
                android:textColor="#515C6F"
                android:gravity="start|center"
                android:paddingHorizontal="55dp"
                android:paddingVertical="12dp"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/books"/>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/arrow228"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C9C8CD"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/FAQ_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:background="@color/colorWhite"
                android:textColor="#515C6F"
                android:gravity="start|center"
                android:paddingHorizontal="55dp"
                android:paddingVertical="12dp"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/faq"/>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/arrow228"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C9C8CD"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/about_app_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="О приложении"
                android:background="@color/colorWhite"
                android:textColor="#515C6F"
                android:gravity="start|center"
                android:paddingHorizontal="55dp"
                android:paddingVertical="12dp"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/info"/>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/arrow228"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C9C8CD"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/settings_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:background="@color/colorWhite"
                android:textColor="#515C6F"
                android:gravity="start|center"
                android:paddingHorizontal="55dp"
                android:paddingVertical="12dp"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/settings"/>

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/arrow228"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_add_teacher_subject"
        android:layout_width="241dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Создать объявление"
        android:layout_marginBottom="20dp"
        android:background="@drawable/create_ad"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"/>
</RelativeLayout>