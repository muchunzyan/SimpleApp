<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppContacts"
    android:background="@color/colorBackGround">

    <LinearLayout
        android:id="@+id/title_lin_lay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/subject_text"
            android:text="Контакты"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#515C6F"
            android:layout_marginStart="27dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C9C8CD"
        android:layout_below="@id/title_lin_lay"/>

    <TextView
        android:id="@+id/upper_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Если у вас есть вопросы по использованию платформы, то вы можете связаться с нами следующим способом."
        android:textSize="16sp"
        android:textColor="#515C6F"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp"
        android:layout_below="@+id/divider"/>

    <RelativeLayout
        android:id="@+id/call_lay"
        android:layout_width="360dp"
        android:layout_height="125dp"
        android:background="@drawable/chat_item_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/upper_text">

        <TextView
            android:id="@+id/call_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Позвонить"
            android:textColor="#515C6F"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/phone_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+7(929)902-30-80\n+7(920)293-23-20\n+7(977)947-75-97\n+7(977)827-91-47"
            android:textSize="15sp"
            android:layout_below="@+id/call_text"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:autoLink="phone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mail_lay"
        android:layout_width="360dp"
        android:layout_height="125dp"
        android:background="@drawable/chat_item_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/call_lay">

        <TextView
            android:id="@+id/mail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Написать"
            android:textColor="#515C6F"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/e-mails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="msuchunzhyan@edu.hse.ru\nzalapasov@edu.hse.ru\ntakhegay@edu.hse.ru\nataran@edu.hse.ru"
            android:textSize="15sp"
            android:layout_below="@+id/mail_text"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:autoLink="email"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/bottom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="По всем остальным вопросам посетите FAQ"
        android:textColor="#515C6F"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:textColorLink="@color/colorPrimary"/>
</RelativeLayout>

