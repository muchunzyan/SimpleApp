<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/my_SOS_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/colorWhite"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:foreground="@drawable/user_icon_account_back"/>

    <LinearLayout
        android:id="@+id/my_SOS_lin_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/my_SOS_image"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_SOS_subjectFromSpinner"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Предмет"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#515C6F"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:id="@+id/my_SOS_subjectName"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Название предмета"
            android:textSize="15sp"
            android:textColor="#515C6F"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:id="@+id/my_SOS_subjectTopic"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Топик"
            android:textSize="15sp"
            android:textColor="#515C6F"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:id="@+id/my_SOS_date_time"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Дата и время"
            android:textSize="15sp"
            android:textColor="#515C6F"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:id="@+id/my_SOS_locationFromSpinner"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Корпус"
            android:textSize="15sp"
            android:textColor="#515C6F"
            android:layout_marginBottom="1dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/my_SOS_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_SOS_lin_lay"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="12dp"
        android:text="₽"
        android:textSize="15sp"
        android:textColor="#FF6969"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="23dp"
        android:src="@drawable/my_arrow" />

    <View
        android:layout_width="315dp"
        android:layout_height="0.5dp"
        android:background="#C9C8CD"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/my_SOS_price"/>

    <TextView
        android:id="@+id/my_SOS_key"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</RelativeLayout>