<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EachFAQ"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/title_lin_lay"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:src="@drawable/back"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/subject_text"
                android:text="Ответ"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#515C6F"
                android:layout_marginStart="27dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C9C8CD"
            android:layout_below="@id/title_lin_lay"/>

        <TextView
            android:id="@+id/e_FAQ_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textColor="#515C6F"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/divider"/>

        <TextView
            android:id="@+id/e_FAQ_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:textColor="#515C6F"
            android:textSize="17sp"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/e_FAQ_question"/>
    </RelativeLayout>
</ScrollView>

