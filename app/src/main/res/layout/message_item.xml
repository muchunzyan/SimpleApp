<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackGround">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_item_back"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="20dp"
        android:padding="7dp">

        <TextView
            android:id="@+id/message_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="phone number"
            android:textSize="14sp"
            android:textColor="#515C6F"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/message_phone_number"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="time"
            android:textColor="#FF6969"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/message_phone_number"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="text"
            android:textColor="#727C8E"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>

